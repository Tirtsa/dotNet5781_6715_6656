<Window x:Class="WPF_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_UI"
        mc:Ignorable="d"
        Title="מערכת תחנות וקווים - מיני פרויקט תשפ''א" TextBlock.TextAlignment="Center" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="BusStationsDg" AutoGenerateColumns="False" IsReadOnly="True" 
                  HorizontalScrollBarVisibility="Visible" HorizontalAlignment="Center" Height="315" 
                  Margin="193,42,30.6,0" VerticalAlignment="Top" Width="570" Grid.Row="0"
                  SelectionChanged="BusStationsDg_SelectionChanged" MouseDoubleClick="BusList_Click">
            <DataGrid.Columns>
                <DataGridTemplateColumn Width="*" x:Name="ActionsOnStation" Header="פעולות על התחנה">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid x:Name="ActionsOnStationGrid">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button x:Name="ViewArrivals" Content="לוח זמנים" HorizontalContentAlignment="Center" 
                                        Grid.Column="0" Margin="2" Click="Delete_Click"/>
                                <Button x:Name="Delete" Content="מחיקה" HorizontalContentAlignment="Center" 
                                        Grid.Column="1" Margin="2" Click="Delete_Click"/>
                                <Button x:Name="Update" Content="עדכון" HorizontalContentAlignment="Center" 
                                        Grid.Column="2" Margin="2" Click="Update_Click"/>
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn x:Name="StationNameColumn" Width="Auto" Header="שם התחנה" 
                                    Binding="{Binding StationName}"/>
                <DataGridTextColumn x:Name="StationsKeyColumn" Width="*" Header="קוד תחנה" 
                                    Binding="{Binding BusStationKey}"/>
            </DataGrid.Columns>
        </DataGrid>

        <Label Content="קווים בתחנה" HorizontalContentAlignment="Right" HorizontalAlignment="Left" 
               Margin="33,42,0,0" VerticalAlignment="Top" Width="136"/>
        <ListBox x:Name="LinesPassListBox" HorizontalAlignment="Left" Height="160" 
                 Margin="33,73,0,0" VerticalAlignment="Top" Width="136"/>

        <Button x:Name="AddStationButton" Content="הוסף תחנה" HorizontalAlignment="Right" Grid.Row="1" Margin="43,0,46.6,20" Click="AddStationButton_Click"/>
    </Grid>
</Window>
