<Window x:Class="WPF_UI.OpeningWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_UI"
        mc:Ignorable="d"
        Title="OpeningWindow" Height="140" Width="200">
    <Grid>
        <Button x:Name="manageButton" Content="ניהול" Height="39" Margin="0,21,9.6,0" VerticalAlignment="Top" FontSize="20" Click="manageButton_Click" HorizontalAlignment="Right" Width="80"/>
        <Button x:Name="rideButton" Content="נוסע" HorizontalAlignment="Left" Height="39" Margin="10,21,0,0" VerticalAlignment="Top" Width="80" FontSize="20" Click="rideButton_Click"/>
        <Button x:Name="exitButton" Content="יציאה" Height="28" Margin="69,0,70.6,10.4" VerticalAlignment="Bottom" FontSize="16" Click="exitButton_Click"/>
    </Grid>
</Window>
