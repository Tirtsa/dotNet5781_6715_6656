<Window x:Class="WPF_UI.DisplayBusLinesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_UI"
        mc:Ignorable="d"
        Title="DisplayBusLinesWindow" Height="400" Width="400">
    <Grid>
        <Button x:Name="AddLineButton" Content="הוסיף קו" HorizontalAlignment="Right" Height="34" Margin="0,27,17,0" VerticalAlignment="Top" Width="102" Click="AddLineButton_Click"/>
        <Button x:Name="UpdateLineButton" Content="עדכן קו" HorizontalAlignment="Center" Height="34" Margin="146,27,145.6,0" VerticalAlignment="Top" Width="102" Click="UpdateLineButton_Click" IsEnabled="{Binding ElementName=lbBusLines, Path=SelectedItems.Count}"/>
        <Button x:Name="DeleteLineButton" Content="מחק קו" HorizontalAlignment="Left" Height="34" Margin="17,27,0,0" VerticalAlignment="Top" Width="102" Click="DeleteLineButton_Click" IsEnabled="{Binding ElementName=lbBusLines, Path=SelectedItems.Count}"/>
        <ListBox x:Name="lbBusLines" HorizontalAlignment="Center" Height="218" VerticalAlignment="Top" Width="257" Margin="68,102,68.6,0" ItemsSource="{Binding lbBusLines}" SelectedItem="{Binding selectedLine}"/>

    </Grid>
</Window>
