<Window x:Class="WPF_UI.AddBusLine"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_UI"
        mc:Ignorable="d"
                Title="AddBusLineWindow" Height="550" Width="800" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>

        <Grid x:Name="grid1" VerticalAlignment="Top" Margin="306,24,0,0" HorizontalAlignment="Left">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label VerticalAlignment="Center" Grid.Row="0" Margin="3" HorizontalAlignment="Right" Grid.Column="1" Content=": מספר קו"/>
            <TextBox x:Name="busLineNumberTextBox" Width="120" VerticalAlignment="Center" Grid.Row="0" Margin="3" HorizontalAlignment="Right" Grid.Column="0" Text="{Binding BusLineNumber, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
            <Label VerticalAlignment="Center" Grid.Row="1" Margin="3" HorizontalAlignment="Right" Grid.Column="1" Content=": איזור"/>
            <ComboBox x:Name="areaComboBox" Width="120" VerticalAlignment="Center" Grid.Row="1" Margin="3" Height="23" HorizontalAlignment="Right" Grid.Column="0" SelectedItem="{Binding Area}"/>
            <Label VerticalAlignment="Center" Grid.Row="2" Margin="3" HorizontalAlignment="Right" Grid.Column="1" Content=": קוד התחנה הראשונה"/>
            <TextBox x:Name="firstStationKeyTextBox" Width="120" VerticalAlignment="Center" Grid.Row="2" Margin="3" Height="23" HorizontalAlignment="Right" Grid.Column="0" Text="{Binding FirstStationKey, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
            <Label VerticalAlignment="Center" Grid.Row="3" Margin="3" HorizontalAlignment="Right" Grid.Column="1" Content=": קוד התחנה האחרונה"/>
            <TextBox x:Name="lastStationKeyTextBox" Width="120" VerticalAlignment="Center" Text="{Binding LastStationKey, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Grid.Row="3" Margin="3" Height="23" HorizontalAlignment="Right" Grid.Column="0"/>
            <Label VerticalAlignment="Center" Grid.Row="4" Margin="3" HorizontalAlignment="Right" Grid.Column="1" Content=": מרחק כולל"/>
            <TextBox x:Name="totalDistanceTextBox" Width="120" VerticalAlignment="Center" Grid.Row="4" Margin="3" Height="23" HorizontalAlignment="Right" Grid.Column="0" Text="{Binding TotalDistance, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
            <Label VerticalAlignment="Center" Grid.Row="5" Margin="3" HorizontalAlignment="Right" Grid.Column="1" Content=": זמן נסיעה כולל"/>
            <TextBox x:Name="totalTimeTextBox" Width="120" VerticalAlignment="Center" Grid.Row="5" Margin="3" Height="23" HorizontalAlignment="Right" Grid.Column="0" Text="{Binding TotalTime, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
        </Grid>
        <ListBox x:Name="LineStationsListBox" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Height="158" Margin="57,282,0,0" VerticalAlignment="Top" Width="289" ItemsSource="{Binding AllStationsOfLine}"/>
        <Label Content=": רשימת התחנות בקו" HorizontalAlignment="Left" Margin="228,242,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right"/>
        <Button x:Name="AddLineButton" Content="הוסף קו" HorizontalAlignment="Left" Margin="448,474,0,0" VerticalAlignment="Top" Width="75" Click="AddLineButton_Click"/>
        <Button x:Name="CancelButton" Content="ביטול" HorizontalAlignment="Left" Margin="317,474,0,0" VerticalAlignment="Top" Width="75" Click="CancelButton_Click"/>
        <Label Content=": רשימת כל התחנות" HorizontalAlignment="Left" Margin="658,242,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right"/>
        <ListBox x:Name="AllStationsListBox" HorizontalAlignment="Left" HorizontalContentAlignment="Right"  Height="158" Margin="483,282,0,0" VerticalAlignment="Top" Width="289"/>
        <Button x:Name="AddButton" Content="&lt;&lt; הוסף" HorizontalAlignment="Left" Margin="380,328,0,0" VerticalAlignment="Top" Width="73" Click="AddButton_Click"/>
        <Button x:Name="RemoveButton" Content="הורד &gt;&gt;" HorizontalAlignment="Left" Margin="380,376,0,0" VerticalAlignment="Top" Width="73" Click="RemoveButton_Click"/>
    </Grid>
</Window>
